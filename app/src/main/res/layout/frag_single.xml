<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
       app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="180dp">

<ImageView
    android:layout_margin="2dp"
    android:scaleType="fitXY"
    android:src="@drawable/icon_512"
    android:id="@+id/iv_singleBlog"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_singleBlog_category"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="Category"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="SmallSp" />
    <TextView
        android:gravity="end"
        android:id="@+id/tv_singleBlog_Date"
        android:textSize="10sp"
        android:textStyle="bold"
        android:text="Date"
        android:textColor="@color/colorGrey"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="SmallSp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_singleBlog_Title"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Title"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <WebView
        android:id="@+id/wv_singleBLog_body"
        android:text="Body"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>